//Hoja Simulacro Parcial.Ejercicio 6
#include <iostream>
#include <conio.h>

using namespace std;

int main()
{
	//ENTRADA
	int n = 5;
	

	//LOGICA Y SALIDA
	cout << "Ingrese N: " << endl;
	cin >> n;


	for (int i = 1; i <= n; i++)
	{
		for (int k = 1; k <= i; k++)
		{
			if ((i == 1) || (k == 1) || (i == 5) || (i == k))
			{ 
				cout << "*";
			}
			else
			{
				cout << " ";
			}
		}
		cout << endl;
	}
	for (int i = n - 1; i >= 1; i--)
	{
		for (int k = n; k >= 1; k--)
		{
			if ((k == 1) || (i == k))
			{
				cout << "*";
			}
			else
			{
				cout << " ";
			}
		}
		cout << endl;
	}
	_getch();
}
