//Hoja Simulacro Parcial.Ejercicio 5
#include <iostream>
#include <conio.h>

using namespace std;

int main()
{
	//ENTRADA
	int a;

	//LOGICA Y SALIDA
	cout << "Ingrese N: " << endl;
	cin >> a;
	for (int i = 1; i <= a; i++)
	{
		for (int k = 1; k <= a; k++)
		{
			if ((k == 1) || (k == a) || (i == k) || (i == a) || (i == 1))
			{
				cout << "* ";
			}
			else
			{
				cout << "  ";
			}
		}
		cout << endl;
	}
	_getch();
}
